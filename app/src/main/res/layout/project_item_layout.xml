<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:clickable="true"
    android:elevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">


    <RelativeLayout
        android:id="@+id/tab_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/cardLabel"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/_22sdp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tvLabel"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="P"
                android:textAllCaps="true"
                android:textColor="@color/hintcolor"
                android:fontFamily="@font/oxygen" />
        </android.support.v7.widget.CardView>

        <!--<ImageView
            android:id="@+id/noti_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/projectdefault" />-->

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_toRightOf="@+id/cardLabel"
            android:orientation="vertical">

            <TextView
                android:id="@+id/projecttittle"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNameCMA"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Project Title Here"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/oxygen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="#3eb4b4b4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Notification.Time.Media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etNameCMA"
                            android:text="City"
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen"/>

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etNameCMA"
                            android:maxLines="2"
                            android:text=" - "
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen"

                            />

                        <TextView
                            android:id="@+id/city"
                            style="@style/TextAppearance.AppCompat.Notification.Time.Media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etNameCMA"
                            android:maxLines="2"
                            android:text="Indore"
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Notification.Time.Media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etNameCMA"
                            android:maxLines="2"
                            android:text="Date"
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Notification.Time.Media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etNameCMA"
                            android:text=" - "
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen" />

                        <TextView
                            android:id="@+id/date"
                            style="@style/TextAppearance.AppCompat.Notification.Time.Media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etNameCMA"
                            android:maxLines="2"
                            android:text="02/08/2018"
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_right_green_24dp" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>

