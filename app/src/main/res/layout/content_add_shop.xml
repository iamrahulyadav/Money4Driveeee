        <com.hvantage2.money4driveeee.customview.CustomTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Start Date"
            android:textColor="@color/white" />
        <com.hvantage2.money4driveeee.customview.CustomEditText
            style="@style/TextAppearance.AppCompat.Subhead"
            android:padding="@dimen/_5sdp"
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Start Date"
            android:inputType="textMultiLine"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:enabled="false"
            android:editable="false"
            android:singleLine="false"
            android:imeOptions="actionDone"
            android:textColor="@color/hintcolor"
            android:textColorHint="@color/hintcolor"
            app:edittextfont="Lato-Light.ttf"
            app:edittextfontHint="Lato-Light.ttf" />
        <View
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor">
        </View>

        <com.hvantage2.money4driveeee.customview.CustomTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="End Date"
            android:textColor="@color/white" />
        <com.hvantage2.money4driveeee.customview.CustomEditText
            style="@style/TextAppearance.AppCompat.Subhead"
            android:padding="@dimen/_5sdp"
            android:id="@+id/etEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select End Date"
            android:inputType="textMultiLine"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:singleLine="false"
            android:enabled="false"
            android:editable="false"
            android:imeOptions="actionDone"
            android:textColor="@color/hintcolor"
            android:textColorHint="@color/hintcolor"
            app:edittextfont="Lato-Light.ttf"
            app:edittextfontHint="Lato-Light.ttf" />
        <View
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor">
        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/linearmain"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.hvantage2.money4driveeee.customview.CustomButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/green_plan_border"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="@string/Cancel"
                android:textColor="@color/green"
                 />

            <com.hvantage2.money4driveeee.customview.CustomButton
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/green_border_rounded"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:text="Add"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
