<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/floatingButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/background_dimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5541465b"
        android:visibility="gone" />

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/material_design_android_floating_action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            fab:menu_icon="@drawable/fab_plus"
            fab:menu_animationDelayPerItem="0"
            fab:menu_colorNormal="@color/colorAccent"
            fab:menu_colorPressed="#2E7D32"
            fab:menu_colorRipple="#1B5E20"
            fab:menu_labels_maxLines="1"
            app:menu_fab_size="mini"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_style="@style/MenuLabelsStyle">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/material_design_floating_action_menu_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_history"
                fab:fab_label="Project History"
                style="@style/MenuButtonsSmall" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/material_design_floating_action_menu_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_profile"
                fab:fab_label="My Profile"
                style="@style/MenuButtonsSmall" />
        </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>