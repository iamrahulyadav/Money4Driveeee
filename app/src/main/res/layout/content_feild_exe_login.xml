<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">

    <com.hvantage2.money4driveeee.customview.CustomTextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/welcome"
        android:textColor="@color/green"
        style="@style/TextAppearance.AppCompat.Display1"
        android:padding="@dimen/_5sdp" />

    <com.hvantage2.money4driveeee.customview.CustomTextView
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:id="@+id/logincontant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:gravity="center"
        android:text="@string/logintxt"
        android:textColor="@color/hintcolor"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@+id/logincontant"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hvantage2.money4driveeee.customview.CustomTextView
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/email"
                android:textColor="@color/white" />

            <com.hvantage2.money4driveeee.customview.CustomEditText
                android:id="@+id/email"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_23sdp"
                android:background="@null"
                android:hint="@string/emailhint"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:singleLine="true"
                android:textColor="@color/hintcolor"
                android:textColorHint="@color/hintcolor"
                android:textCursorDrawable="@drawable/cursorcolor"
               />

            <View
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor">

            </View>

            <com.hvantage2.money4driveeee.customview.CustomTextView
                android:id="@+id/customTextView"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="@dimen/_5sdp"
                android:text="@string/pass"
                android:textColor="@color/white"
                />

            <com.hvantage2.money4driveeee.customview.CustomEditText
                android:id="@+id/password"
                android:layout_marginTop="@dimen/_8sdp"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_23sdp"
                android:background="@null"
                android:hint="@string/passwordhint"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/hintcolor"
                android:textColorHint="@color/hintcolor"
                android:textCursorDrawable="@drawable/cursorcolor"
            />

            <View
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerColor">
            </View>

        </LinearLayout>

        <com.hvantage2.money4driveeee.customview.CustomTextView
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/green_border_rounded"
            android:gravity="center"
            android:paddingRight="@dimen/_30sdp"
            android:paddingLeft="@dimen/_30sdp"
            android:text="@string/login"
            android:elevation="@dimen/_5sdp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Button"
            />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footerimg"
        android:gravity="center"
        android:orientation="horizontal">

        <com.hvantage2.money4driveeee.customview.CustomTextView
            android:id="@+id/btnForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="@dimen/_5sdp"
            android:text="@string/forgotpassword"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            />

    </LinearLayout>

</RelativeLayout>