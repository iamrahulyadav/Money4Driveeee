<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
            android:id="@+id/imgBack"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />

                <TextView
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Photo"
                    android:textColor="@android:color/white"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/background"
        android:scrollbars="none"
        android:id="@+id/container"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <!--<RelativeLayout-->
                <!--android:id="@+id/toolbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="?attr/actionBarSize"-->
                <!--android:background="#9a41465b"-->
                <!--android:elevation="@dimen/_5sdp">-->
                <!--<ImageView-->
                    <!--android:id="@+id/imgBack"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/_15sdp"-->
                    <!--android:src="@drawable/ic_arrow_back_black_24dp"-->
                    <!--/>-->

            <!--</RelativeLayout>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_layout"
                >
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/footerimg"
                    android:layout_height="wrap_content"></LinearLayout>-->

                <RelativeLayout
                    android:id="@+id/signup_image"
                    android:layout_width="match_parent"
                    android:layout_height="240dp">



                    <ImageView
                        android:id="@+id/img_circle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#e9e9e9"
                        android:scaleType="centerCrop"
                        android:src="@drawable/no_image_placeholder" />

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/editImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_photo_black_24dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_below="@+id/signup_image"
                    android:orientation="vertical">
                    <com.hvantage2.money4driveeee.customview.CustomButton
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/btnAddMore"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/green_plan_border"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="@string/addmore"
                        android:textColor="@color/green"
                        app:edittextfont="Montserrat-Regular.ttf" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/detaillinear"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_below="@+id/btnAddMore"
                        android:orientation="vertical">
                        <com.hvantage2.money4driveeee.customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/white"
                            app:edittextfont="Lato-Regular.ttf"
                            android:text="@string/dimentation"/>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.hvantage2.money4driveeee.customview.CustomEditText
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                style="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColorHint="@color/hintcolor"
                                android:background="@drawable/square_border"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:id="@+id/dimensionTextheight"
                                android:textAlignment="center"
                                android:maxLength="4"
                                app:edittextfont="Lato-Regular.ttf"
                                android:textColor="@color/hintcolor"
                                android:hint="Height"/>

                            <com.hvantage2.money4driveeee.customview.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                style="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColorHint="@color/hintcolor"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:textAlignment="center"
                                app:edittextfont="Lato-Regular.ttf"
                                android:textColor="@color/hintcolor"
                                android:hint="x"/>

                            <com.hvantage2.money4driveeee.customview.CustomEditText
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                style="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColorHint="@color/hintcolor"
                                android:background="@drawable/square_border"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:id="@+id/dimensionTextwidth"
                                android:textAlignment="center"
                                android:maxLength="4"
                                app:edittextfont="Lato-Regular.ttf"
                                android:textColor="@color/hintcolor"
                                android:hint="Width"/>
                        </LinearLayout>

                        <!-- <View
                             android:layout_marginTop="@dimen/_5sdp"
                             android:id="@+id/view"
                             android:layout_width="match_parent"
                             android:layout_height="1dp"
                             android:background="@color/dividerColor" />-->
                        <com.hvantage2.money4driveeee.customview.CustomTextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            app:edittextfont="Lato-Regular.ttf"
                            android:padding="@dimen/_5sdp"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"

                            android:text="@string/remark"/>
                        <com.hvantage2.money4driveeee.customview.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColorHint="@color/hintcolor"
                            android:background="@null"
                            android:textColor="@color/hintcolor"
                            android:id="@+id/remarkText"
                            android:imeOptions="actionDone"
                            app:edittextfont="Lato-Regular.ttf"
                            android:hint="Enter Remark"/>
                        <View
                            android:layout_marginTop="@dimen/_5sdp"
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />
                    </LinearLayout>

                    <com.hvantage2.money4driveeee.customview.CustomButton
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:paddingRight="@dimen/_30sdp"
                        android:paddingLeft="@dimen/_30sdp"
                        android:layout_below="@+id/detaillinear"
                        android:layout_gravity="center"
                        android:id="@+id/btnSave"
                        android:layout_margin="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/green_border_rounded"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        />

                </LinearLayout>





            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>



</LinearLayout>







