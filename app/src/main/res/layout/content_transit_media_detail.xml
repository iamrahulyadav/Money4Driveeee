<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hvantage2.money4driveeee.activity.transit.ConfirmTransitActivity"
    tools:showIn="@layout/activity_transit_media_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footerimg"></LinearLayout>

        <ScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <!--  <TextView
                      android:layout_marginTop="@dimen/_15sdp"
                      style="@style/Base.TextAppearance.AppCompat.Subhead"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/_4sdp"
                      android:text="Transit"
                      android:textColor="@color/white" />
                  <EditText
                      style="@style/Base.TextAppearance.AppCompat.Subhead"
                      android:padding="@dimen/_4sdp"
                      android:id="@+id/etTransit"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Bus, Auto, Cab..."
                      android:background="@null"
                      android:inputType="textCapSentences|textAutoCorrect|textPersonName"
                      android:enabled="false"
                      android:editable="false"
                      android:singleLine="true"
                      android:textColor="@color/hintcolor"
                      android:textColorHint="@color/hintcolor"
  
                       />
  
                  <View
                      android:layout_marginTop="@dimen/_15sdp"
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/dividerColor">
  
                  </View>-->

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Driver Name"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etDriverName"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/oxygen"
                    android:hint="NA"
                    android:inputType="textCapWords|textAutoCorrect|textPersonName"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor">

                </View>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Driver Contact No."
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etDriverContact"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:fontFamily="@font/oxygen"
                    android:hint="NA"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor">

                </View>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Vehicle"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etVehicle"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/oxygen"
                    android:hint="NA"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor">

                </View>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Vehicle No."
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etRegNo"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:fontFamily="@font/oxygen"
                    android:hint="NA"
                    android:inputType="textCapWords"

                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/oxygen"
                            android:padding="@dimen/_4sdp"
                            android:text="State"
                            android:textColor="@color/white" />


                        <Spinner
                            android:id="@+id/spinnerState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/hintcolor"
                            android:visibility="visible" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/oxygen"
                            android:padding="@dimen/_4sdp"
                            android:text="City"
                            android:textColor="@color/white" />


                        <Spinner
                            android:id="@+id/spinnerCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/hintcolor"
                            android:visibility="visible" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Address"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etDriverAddress"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/oxygen"
                    android:hint="NA"
                    android:inputType="textCapWords"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Booked For"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etDriverBookFor"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:text="NA"
                    android:textColor="@color/hintcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/oxygen"
                            android:padding="@dimen/_4sdp"
                            android:text="Start Date"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/etStartDate"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:editable="false"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/oxygen"
                            android:hint="Select Start Date"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:padding="@dimen/_4sdp"
                            android:singleLine="false"
                            android:textColor="@color/hintcolor"

                            android:textColorHint="@color/hintcolor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/oxygen"
                            android:padding="@dimen/_4sdp"
                            android:text="End Date"
                            android:textColor="@color/white" />

                        <EditText
                            android:id="@+id/etEndDate"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:editable="false"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/oxygen"
                            android:hint="Select End Date"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:padding="@dimen/_4sdp"
                            android:singleLine="false"
                            android:textColor="@color/hintcolor"
                            android:textColorHint="@color/hintcolor"

                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Uploaded Documents"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/imgDoc1"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:background="@drawable/doc_thumb_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_doc_thumb" />

                        <TextView
                            android:id="@+id/tvImgDoc1Remark"
                            style="@style/TextAppearance.AppCompat.Notification.Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgDoc1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/oxygen"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/hintcolor" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/imgDoc2"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:background="@drawable/doc_thumb_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_doc_thumb" />

                        <TextView
                            android:id="@+id/tvImgDoc2Remark"
                            style="@style/TextAppearance.AppCompat.Notification.Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgDoc2"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/oxygen"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/hintcolor" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Report"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etReportRemark"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/oxygen"
                    android:hint="Enter remark"
                    android:inputType="textCapWords|textMultiLine|textNoSuggestions"
                    android:maxLines="3"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/oxygen"
                    android:padding="@dimen/_4sdp"
                    android:text="Warning"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp">

                    <RadioButton
                        android:id="@+id/rbNone"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/white"
                        android:fontFamily="@font/oxygen"
                        android:text="None"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbYellowCard"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:buttonTint="@color/colorYellow"
                        android:fontFamily="@font/oxygen"
                        android:text="Yellow Card"
                        android:textColor="@color/colorYellow" />

                    <RadioButton
                        android:id="@+id/rbRedCard"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:buttonTint="@color/colorRed"
                        android:fontFamily="@font/oxygen"
                        android:text="Red Card"
                        android:textColor="@color/colorRed" />

                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>


                <LinearLayout
                    android:id="@+id/llUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/linearmain"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/green_plan_border"
                        android:fontFamily="@font/oxygen"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:text="@string/Cancel"
                        android:textColor="@color/green" />

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/green_border_rounded"
                        android:fontFamily="@font/oxygen"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:text="@string/Confirm"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/linearmain"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnRepaste"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/green_plan_border"
                        android:fontFamily="@font/oxygen"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:text="Repaste"
                        android:textColor="@color/green" />

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/green_border_rounded"
                        android:fontFamily="@font/oxygen"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:text="Report"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
