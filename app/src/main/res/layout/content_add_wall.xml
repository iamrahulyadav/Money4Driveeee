<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.wallpainting.AddWallActivity"
    tools:showIn="@layout/activity_add_wall">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/footerimg"></LinearLayout>

        <ScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/linearmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="Wall Title/Name"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen" />

                <EditText
                    android:id="@+id/etWallName"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Wall Title/Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences|textNoSuggestions"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"
                    android:fontFamily="@font/oxygen"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>


                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="@string/contact_name"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen" />

                <EditText
                    android:id="@+id/etContName"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Contact Person Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences|textPersonName|textNoSuggestions"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="true"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"

                    android:fontFamily="@font/oxygen"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="@string/contact_no"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etContNo"
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_80sdp"
                        android:background="@null"
                        android:hint="Enter Contact Person No."
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_4sdp"
                        android:singleLine="true"
                        android:textColor="@color/hintcolor"
                        android:textColorHint="@color/hintcolor"
                        android:fontFamily="@font/oxygen"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRequestOtp"
                            style="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:padding="@dimen/_4sdp"
                            android:text="Send OTP"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/oxygen"/>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:padding="@dimen/_4sdp"
                            android:text="State"
                            android:textColor="@color/white"
                            android:fontFamily="@font/oxygen" />


                        <android.support.v7.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/atvStates"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter State"
                            android:inputType="textCapSentences|textNoSuggestions"
                            android:padding="@dimen/_4sdp"
                            android:singleLine="true"
                            android:textColor="@color/hintcolor"
                            android:textColorHint="@color/hintcolor" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:padding="@dimen/_4sdp"
                            android:text="City"
                            android:textColor="@color/white"
                            android:fontFamily="@font/oxygen" />

                        <android.support.v7.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/atvCities"
                            style="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Enter City"
                            android:inputType="textCapSentences|textNoSuggestions"
                            android:padding="@dimen/_4sdp"
                            android:singleLine="true"
                            android:textColor="@color/hintcolor"
                            android:textColorHint="@color/hintcolor" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dividerColor" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="@string/address"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen" />

                <EditText
                    android:id="@+id/etAddress"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Address"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences|textMultiLine|textNoSuggestions"
                    android:maxLines="3"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"
                    android:fontFamily="@font/oxygen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="Start Date"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen" />

                <EditText
                    android:id="@+id/etStartDate"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:hint="Select Start Date"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="false"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"
                    android:fontFamily="@font/oxygen"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="End Date"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen" />

                <EditText
                    android:id="@+id/etEndDate"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:hint="Select End Date"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:padding="@dimen/_4sdp"
                    android:singleLine="false"
                    android:textColor="@color/hintcolor"
                    android:textColorHint="@color/hintcolor"
                    android:fontFamily="@font/oxygen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>


                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:text="Upload Documents (Max. 2)"
                    android:textColor="@color/white"
                    android:fontFamily="@font/oxygen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/imgDoc1"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:background="@drawable/doc_thumb_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_doc_thumb" />

                        <TextView
                            android:id="@+id/tvImgDoc1Remark"
                            style="@style/TextAppearance.AppCompat.Notification.Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgDoc1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp">

                        <ImageView
                            android:id="@+id/imgDoc2"
                            android:layout_width="@dimen/_64sdp"
                            android:layout_height="@dimen/_64sdp"
                            android:background="@drawable/doc_thumb_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_doc_thumb" />

                        <TextView
                            android:id="@+id/tvImgDoc2Remark"
                            style="@style/TextAppearance.AppCompat.Notification.Time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgDoc2"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/hintcolor"
                            android:fontFamily="@font/oxygen"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dividerColor"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/linearmain"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/green_plan_border"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:text="@string/Cancel"
                        android:textColor="@color/green"
                        android:fontFamily="@font/oxygen" />

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/green_border_rounded"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:fontFamily="@font/oxygen"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>